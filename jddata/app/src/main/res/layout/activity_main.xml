<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.jddata.util.MyLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/citySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/is_test"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="是否测试模式，勾选打开原应用做单次动作，\n否则全部镜像执行同一动作"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/oneEnv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="抓取特定的镜像，输入目标编号（为空则忽略该变量）"
            android:inputType="number"
            android:textSize="12sp" />

        <Button
            android:id="@+id/open_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进入设置打开勾选服务" />

        <Button
            android:id="@+id/screenshot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="截屏" />

        <Button
            android:id="@+id/shelldroid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="镜像列表" />

        <Button
            android:id="@+id/create10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建10个镜像" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal">

            <Button
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索" />

            <Button
                android:id="@+id/searchShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索并加购" />

            <EditText
                android:id="@+id/searchText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海飞丝" />
        </LinearLayout>

        <Button
            android:id="@+id/cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车" />

        <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页" />

        <Button
            android:id="@+id/leaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排行榜" />

        <Button
            android:id="@+id/worthBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现好货" />

        <Button
            android:id="@+id/niceBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会买专辑" />

        <Button
            android:id="@+id/jdKill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京东秒杀" />

        <Button
            android:id="@+id/dmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DMP广告" />

        <Button
            android:id="@+id/dmpShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DMP广告加购" />

        <Button
            android:id="@+id/brandKill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌秒杀" />

        <Button
            android:id="@+id/brandKillAndShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌秒杀点击加购" />

        <Button
            android:id="@+id/typeKill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品类秒杀" />

        <Button
            android:id="@+id/oneKeyRun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一键启动，按镜像列表顺序执行所有动作" />

        <LinearLayout
            android:id="@+id/oneKeyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开启一键运行，请点击上面按钮选择执行顺序" />
        </LinearLayout>

    </com.example.jddata.util.MyLayout>
</ScrollView>
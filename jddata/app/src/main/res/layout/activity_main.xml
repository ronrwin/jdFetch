<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.jddata.util.MyLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/version"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="版本：" />

        <TextView
            android:id="@+id/leftCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/is_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否原始数据" />

        <EditText
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="第几天的数据，-1是指第九天，"
            android:text="0"
            android:visibility="gone" />

        <Button
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试"
            android:visibility="gone" />

        <Button
            android:id="@+id/open_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进入设置打开勾选服务" />

        <Button
            android:id="@+id/shelldroid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号列表" />


        <Button
            android:id="@+id/refreshClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刷新账号文件"
            android:visibility="gone" />

        <Button
            android:id="@+id/fetch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#bcf"
            android:text="采集数据" />

        <Button
            android:id="@+id/templateMove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#3df"
            android:text="做养成" />

        <Button
            android:id="@+id/move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#3df"
            android:text="做动作" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/search_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入关键字"
                android:text="洗发水" />

            <Button
                android:id="@+id/searchBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取搜索结果" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/searchSku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#9a2"
                android:text="s_product" />

            <Button
                android:id="@+id/searchShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#9a2"
                android:text="s_shop" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/searchTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#9a2"
                android:text="s_title" />

            <EditText
                android:id="@+id/srcname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="从哪个文件读取"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/moveTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#719"
            android:text="做动作测试"
            android:visibility="gone" />

        <Button
            android:id="@+id/restore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#397"
            android:text="恢复上次剩余动作" />


        <Button
            android:id="@+id/startJdThread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#654"
            android:text="开始京东秒杀线程"
            android:visibility="gone" />

        <Button
            android:id="@+id/keywordTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#719"
            android:text="关键词查看测试"
            android:visibility="gone" />

        <Button
            android:id="@+id/fetchSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取搜索结果" />

        <Button
            android:id="@+id/cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取购物车" />

        <Button
            android:id="@+id/my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取我的" />

        <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取首页" />

        <Button
            android:id="@+id/leaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取排行榜"
            android:visibility="gone" />

        <Button
            android:id="@+id/dmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取dmp"
            android:visibility="gone" />


        <Button
            android:id="@+id/good_hop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取逛好店"
            android:visibility="gone" />

        <Button
            android:id="@+id/jdKill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取京东秒杀"
            android:visibility="gone" />

        <Button
            android:id="@+id/worthBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取发现好货"
            android:visibility="gone" />

        <Button
            android:id="@+id/niceBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取会买专辑"
            android:visibility="gone" />

        <Button
            android:id="@+id/brandKill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取品牌秒杀"
            android:visibility="gone" />

        <Button
            android:id="@+id/typeKill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取品类秒杀"
            android:visibility="gone" />


        <Button
            android:id="@+id/outputDatebase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输出数据库"
            android:visibility="gone" />

        <Button
            android:id="@+id/clearJdCache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空京东缓存"
            android:visibility="gone" />

        <Button
            android:id="@+id/clearEnv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空所有账号"
            android:visibility="gone" />


        <Button
            android:id="@+id/market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京东超市"
            android:visibility="gone" />

        <Button
            android:id="@+id/fresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京东生鲜"
            android:visibility="gone" />

        <Button
            android:id="@+id/accessHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京东到家"
            android:visibility="gone" />

        <Button
            android:id="@+id/nut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="领京豆"
            android:visibility="gone" />

        <Button
            android:id="@+id/flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闪购"
            android:visibility="gone" />

        <Button
            android:id="@+id/voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="领券"
            android:visibility="gone" />

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plus会员"
            android:visibility="gone" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <Button
            android:id="@+id/outputOriginCSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导出原始数据"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/outputCSV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导出抓取的数据" />

            <EditText
                android:id="@+id/outputDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="日期导出(07-17)，留空则导出全部数据"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/targetEnv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="单独针对某账号"
                android:textSize="12sp" />


            <EditText
                android:id="@+id/targetRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="针对第几个模板动作下标"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/testStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="动作测试开始下标"
                android:textSize="12sp" />


            <EditText
                android:id="@+id/testEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="动作测试结束下标"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/indexStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="固定开始下标"
                android:textSize="12sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/indexEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="固定结束下标"
                android:textSize="12sp"
                android:visibility="visible" />
        </LinearLayout>
    </com.example.jddata.util.MyLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.jddata.util.MyLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leftCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="第几天的数据，-1是指第九天，"
            android:text="0" />

        <CheckBox
            android:id="@+id/is_origin"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="此次执行是否标记为原始记录"
            android:textSize="12sp" />

        <Button
            android:id="@+id/open_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进入设置打开勾选服务" />

        <Button
            android:id="@+id/shelldroid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号列表" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000" />


        <Button
            android:id="@+id/fetch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#bcf"
            android:text="采集数据" />

        <Button
            android:id="@+id/move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#3df"
            android:text="做动作" />


        <Button
            android:id="@+id/moveTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#719"
            android:text="做动作测试"
            android:visibility="gone" />

        <Button
            android:id="@+id/indexTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#16f"
            android:text="做动作下标测试"
            android:visibility="visible" />


        <Button
            android:id="@+id/restore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#397"
            android:text="恢复上次剩余动作" />


        <Button
            android:id="@+id/startJdThread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#654"
            android:text="开始京东秒杀线程" />


        <Button
            android:id="@+id/removeJdKill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#397"
            android:text="去掉京东秒杀任务" />


        <Button
            android:id="@+id/outEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#719"
            android:text="输出未完成日志" />

        <Button
            android:id="@+id/keywordTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#719"
            android:text="关键词查看测试"
            android:visibility="gone" />


        <Button
            android:id="@+id/fetchSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取搜索洗发水" />

        <Button
            android:id="@+id/cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取购物车" />

        <Button
            android:id="@+id/my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取我的" />


        <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取首页" />

        <Button
            android:id="@+id/leaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取排行榜" />

        <Button
            android:id="@+id/dmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取dmp" />


        <Button
            android:id="@+id/good_hop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取逛好店" />

        <Button
            android:id="@+id/jdKill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取京东秒杀" />

        <Button
            android:id="@+id/worthBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取发现好货" />

        <Button
            android:id="@+id/niceBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取会买专辑"
            android:visibility="gone" />

        <Button
            android:id="@+id/brandKill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取品牌秒杀" />

        <Button
            android:id="@+id/typeKill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取品类秒杀" />


        <Button
            android:id="@+id/clearJdCache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空京东缓存" />

        <Button
            android:id="@+id/clearEnv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空所有账号" />


        <Button
            android:id="@+id/market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京东超市" />

        <Button
            android:id="@+id/fresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京东生鲜" />

        <Button
            android:id="@+id/accessHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京东到家" />

        <Button
            android:id="@+id/nut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="领京豆" />

        <Button
            android:id="@+id/flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闪购" />

        <Button
            android:id="@+id/voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="领券" />

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plus会员" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <Button
            android:id="@+id/outputOriginCSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导出原始数据" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/outputCSV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导出抓取的数据" />

            <EditText
                android:id="@+id/outputDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="日期导出(07-17)，留空则导出全部数据"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/targetEnv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="单独针对某账号"
                android:textSize="12sp" />


            <EditText
                android:id="@+id/targetRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="针对第几个模板动作下标"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/testStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="动作测试开始下标"
                android:textSize="12sp" />


            <EditText
                android:id="@+id/testEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="动作测试结束下标"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/indexStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="固定开始下标"
                android:textSize="12sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/indexEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="固定结束下标"
                android:textSize="12sp"
                android:visibility="visible" />
        </LinearLayout>
    </com.example.jddata.util.MyLayout>
</ScrollView>